<%- include('../elements/header'); %> 
 
<div class="clearfix"></div>
<style type="text/css">
  .form-group.has-error .select2{
    border:1px solid #dd4b39;
    box-shadow:none;
  }
</style>
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
     <ol class="breadcrumb">
        <li> <i class="ace-icon fa fa-tachometer"></i> <a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a> </li>
                    <li class="active"><a href="<%=nodeAdminUrl%>/categories/list"> Products </a> </li>
                    <li class="active"><%=action%></li>
      </ol>
      <h1>
        Add New <%=controller%>
      </h1>
     
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <div class="panel">
            <!-- general form elements -->
            <div class="box box-primary">
                
                <div class="box-header with-border"> <!-- <?php echo $this->session->flashdata('dispMessage'); ?> --> </div>

                <!-- form start -->
                <%- include ../elements/flash.ejs %>  
                <form method="post" action="<%=nodeAdminUrl%>/<%=controller%>/add" enctype="multipart/form-data">
                
                <div class="box-body">
                    
                    <div> 
                        <label for="form-field-select-2">Category</label> 
                        <select class="form-control" name="category_id" id="form-field-select-2">
                            <%  
                            for ( var i = 0; i < categories.length; i++ ) {
                                var selected = ( categories[0].volume == i ) ? "selected" : "";
                            %><option value="<%=categories[ i ] %>" <%=selected %>><%=categories[ i ].title %></option><%
                            }
                            %>  
                        </select> 
                        <span class="error"><%=errorData.is_active%></span>  
                    </div>  <br>

                    <div>
                        <label for="form-field-select-1">Title</label> 
                        <input type="text" name="title" value="<%=data.title%>" id="form-field-select-1" placeholder="Title" class="form-control">  
                        <span class="error"><%=errorData.title%></span> 
                    </div>

                    <div>
                        <label for="form-field-select-1">Description</label> 
                        <textarea  class="form-control" rows="5" name="description" placeholder="Description" ><%=data.description%></textarea> 
                        <span class="error"><%=errorData.description%></span>
                    </div>

                    <div>
                        <label for="form-field-select-1"> Price </label> 
                        <input type="text" name="price" value="<%=data.price%>" id="form-field-select-1" placeholder="Price" class="form-control">  
                        <span class="error"><%=errorData.price%></span>    
                    </div>  <br>  

                    <div>
                        <label for="form-field-select-1"> Discount (In %) </label> 
                        <input type="text" name="discount" value="<%=data.discount%>" id="form-field-select-1" placeholder="Discount (In %)" class="form-control">  
                        <span class="error"><%=errorData.discount%></span> 
                    </div>  <br>  

                    <div>
                        <label for="form-field-select-1"> Display Price </label> 
                        <input type="text" name="display_price" value="<%=data.display_price%>" id="form-field-select-1" placeholder="Display Price" class="form-control">  
                        <span class="error"><%=errorData.display_price%></span>   
                    </div>  <br>   
  
                </div> 
                <!-- /.box-body --> 

                <div class="box-footer">
                    <a href="<%=nodeAdminUrl%>/<%=controller%>/list%>"><button type="button" class="btn btn-default" >Cancel</button></a>
                    <button type="submit" class="btn btn-info pull-right"><i class="ace-icon fa fa-check bigger-110"></i> Submit</button>
                </div>

              </form>

            </div>
            
          <!-- /.box -->
           </div> 
        </div>
        <!--/.col (left) -->
        
         
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>

<%- include('../elements/footer'); %>  