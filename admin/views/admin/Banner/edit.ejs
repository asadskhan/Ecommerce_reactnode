 
<%- include('../elements/header'); %> 

<div class="clearfix"></div>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <ol class="breadcrumb">
            <li> <i class="ace-icon fa fa-tachometer"></i> <a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a> </li>
            <li class="active"><a href="<%=nodeAdminUrl%>/banner/list"> Category </a> </li>
            <li class="active"><%=action%></li>
        </ol>
        <h1>Edit Category</h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <div class="panel">

            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border"><%- include ../elements/flash.ejs %>  </div>
                <form method="post" action="<%=nodeAdminUrl%>/banner/edit/<%=data[0].id%>" enctype="multipart/form-data">
                    <!-- form start -->
                    <div class="box-body">
                        <div class="form-group <%=(errorData.title)?'has-error':''%>">
                            <label for="form-field-select-1">Banner Title</label> <span class="required_star" aria-required="true"> *</span>
                            <input type="text" name="title" value="<%=data[0].title%>" id="form-field-select-1" placeholder="Banner Title" class="form-control">  
                            <span class="help-block"><%=errorData.title%></span>
                        </div>

                        <div class="form-group <%=(errorData.title1)?'has-error':''%>">
                                <label for="form-field-select-2">Banner Sub Title</label> <span class="required_star" aria-required="true"> *</span>
                                <input type="text" name="title1" value="<%=data[0].title1%>" id="form-field-select-2" placeholder="Sub Title" class="form-control">  
                                <span class="help-block"><%=errorData.title1%></span>
                        </div>
                         

                        <div class="form-group <%=(errorData.image)?'has-error':''%>">
                                <label for="form-field-select-3">Banner</label> <span class="required_star" aria-required="true"> *</span>
                                <input type="file" name="image" id="form-field-select-3" class="form-control">
                                <span class="help-block"><%=errorData.image%></span>
                        </div>
                        <%if(data[0].image != ''){ %>
                        <div class="form-group">  
                            <a href="<%=nodeSiteUrl+'/upload/banner_image/'+data[0].image%>" target="_blank">
                                <img src="<%=nodeSiteUrl+'/upload/banner_image/'+data[0].image%>" style="height: 100px; width:100px;" />
                            </a>  
                            
                        </div>
                        <% } %>
                        <div class="form-group <%=(errorData.description)?'has-error':''%>">
                          <label for="form-field-select-4">Description</label><span class="required_star" aria-required="true"> *</span>
                          <textarea type="text" name="description" id="form-field-select-4" placeholder="Description" class="form-control"><%=data[0].description%></textarea>
                          <span class="help-block"><%=errorData.description%></span>
                        </div>

                        <div class="form-group <%=(errorData.sort_order)?'has-error':''%>">
                            <label for="form-field-select-6">Display Order</label><span class="required_star" aria-required="true">*</span>
                            <input type="text" name="sort_order" value="<%=data[0].sort_order%>" id="form-field-select-6" placeholder="Display Order" class="form-control">
                            <span class="help-block"><%=errorData.sort_order%></span>
                        </div>
                        
                        <div class="form-group <%=(errorData.status)?'has-error':''%>">
                            <label for="form-field-select-5">Status</label> <span class="required_star" aria-required="true"> *</span>
                            <select class="form-control" name="status" id="form-field-select-5">
                                <option value="1" <%=data[0].status==1 ? 'selected' : '' %>>Active</option>
                                <option value="0" <%=data[0].status==0 ? 'selected' : '' %>>Inactive</option> 
                            </select> 
                            <span class="help-block"><%=errorData.status%></span> 
                        </div> 
                    </div> 
                    <!-- /.box-body --> 

                    <div class="box-footer">
                        <button class="btn btn-info" type="submit"> <i class="ace-icon fa fa-check bigger-110"></i>Submit</button>
                        <a href="<%=nodeAdminUrl%>/<%=controller%>/list%>"><button class="btn" type="button">Cancel</button></a> 
                    </div>
                </form>
            </div>
            
          <!-- /.box -->
           </div> 
        </div>
        <!--/.col (left) -->
        
         
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content --> 
</div>
<%- include('../elements/footer'); %> 
