 
<%- include('../elements/header'); %> 

<div class="clearfix"></div>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <ol class="breadcrumb">
            <li> <i class="ace-icon fa fa-tachometer"></i> <a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a> </li>
            <li class="active"><a href="<%=nodeAdminUrl%>/category/list"> Category </a> </li>
            <li class="active"><%=action%></li>
        </ol>
        <h1>Edit Category</h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <div class="panel">

            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border"><%- include ../elements/flash.ejs %>  </div>
                <form method="post" action="<%=nodeAdminUrl%>/category/edit/<%=data[0].id%>">
                    <!-- form start -->
                    <div class="box-body">
                        <div class="form-group <%=(errorData.category_name)?'has-error':''%>">
                            <label for="form-field-title">Category Name</label><span class="required_star" aria-required="true"> *</span> 
                            <input type="text" name="category_name" value="<%=data[0].category_name%>" id="form-field-title" placeholder="Category Name" class="form-control">
                            <span class="help-block"><%=errorData.category_name%></span>
                        </div>

                        <div class="form-group <%=(errorData.status)?'has-error':''%>">
                            <label for="form-field-select-2">Status</label>
                            <select class="form-control" name="status" id="form-field-select-2">
                                <option value="1" <%=data[0].status==1 ? 'selected' : '' %>>Active</option>
                                <option value="0" <%=data[0].status==0 ? 'selected' : '' %>>Inactive</option>
                            </select>
                            <span for="status" class="help-block"><%=errorData.status%></span>
                        </div>
                    </div> 
                    <!-- /.box-body --> 

                    <div class="box-footer">
                        <button class="btn btn-info" type="submit"> <i class="ace-icon fa fa-check bigger-110"></i>Submit</button>
                        <a href="<%=nodeAdminUrl%>/<%=controller%>/list%>"><button class="btn" type="button">Cancel</button></a> 
                    </div>
                </form>
            </div>
            
          <!-- /.box -->
           </div> 
        </div>
        <!--/.col (left) -->
        
         
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content --> 
</div>
<%- include('../elements/footer'); %> 
