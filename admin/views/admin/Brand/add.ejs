<%- include('../elements/header'); %> 
 
<div class="clearfix"></div>
 
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
     <ol class="breadcrumb">
        <li> <i class="ace-icon fa fa-tachometer"></i> <a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a> </li>
                    <li class="active"><a href="<%=nodeAdminUrl%>/brand/list"> Brand </a> </li>
                    <li class="active"><%=action%></li>
      </ol>
      <h1>
        Add New <%=controller%>
      </h1>
     
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <div class="panel">
            <!-- general form elements -->
            <div class="box box-primary">
                
                <div class="box-header with-border"><%- include ../elements/flash.ejs %></div>
                <form method="post" action="<%=nodeAdminUrl%>/<%=controller%>/add" enctype="multipart/form-data">
                <!-- form start -->
                  <div class="box-body"> 
                      <div class="form-group <%=(errorData.title)?'has-error':''%>">
                              <label for="form-field-select-1">Brand Name</label> 
                              <input type="text" name="title" value="<%=data.title%>" id="form-field-select-1" placeholder="Brand Name" class="form-control">  
                              <span class="error"><%=errorData.title%></span>
                      </div>

                      <div class="form-group <%=(errorData.is_active)?'has-error':''%>">
                          <label for="form-field-select-2">Status</label> 
                          <select class="form-control" name="is_active" id="form-field-select-2">
                              <option value="1" <%=data.is_active==1 ? 'selected' : '' %>>Active</option>
                              <option value="0" <%=data.is_active==1 ? 'selected' : '' %>>Inactive</option> 
                          </select> 
                          <span class="error"><%=errorData.is_active%></span> 
                      </div> 
                      
                </div> 
                <!-- /.box-body --> 

                <div class="box-footer">
                  <button class="btn btn-info" type="submit">
                      <i class="ace-icon fa fa-check bigger-110"></i>  Submit
                  </button>  
                  &nbsp; &nbsp; &nbsp;
                  <a href="<%=nodeAdminUrl%>/<%=controller%>/list%>"> <button class="btn" type="button">
                          Cancel 
                  </button></a> 
                </div>
              </form>
            </div>
            
          <!-- /.box -->
           </div> 
        </div>
        <!--/.col (left) -->
        
         
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>

<%- include('../elements/footer'); %>  