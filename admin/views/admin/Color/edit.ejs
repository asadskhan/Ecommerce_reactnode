 
<%- include('../elements/header'); %> 

<div class="clearfix"></div>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <ol class="breadcrumb">
            <li> <i class="ace-icon fa fa-tachometer"></i> <a href="<%=nodeAdminUrl%>/Dashboard">Dashboard</a> </li>
            <li class="active"><a href="<%=nodeAdminUrl%>/color/list"> Color </a> </li>
            <li class="active"><%=action%></li>
        </ol>
        <h1>Edit Color</h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <div class="panel">

            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border"><%- include ../elements/flash.ejs %>  </div>
                <form method="post" action="<%=nodeAdminUrl%>/color/edit/<%=data[0].id%>">
                    <!-- form start -->
                    <div class="box-body">
                    
                       
                        <input type="hidden" name="is_subscription" value="">
                        <div class="form-group <%=(errorData.title)?'has-error':''%>">
                            <label for="form-field-title">Color Title</label><span class="required_star" aria-required="true"> *</span> 
                            <input type="text" name="title" value="<%=data[0].title%>" id="form-field-title" placeholder="Color Name" class="form-control">
                            <span for="title" class="help-block"><%=errorData.title%></span>
                        </div>

                        <div class="form-group <%=(errorData.color_code)?'has-error':''%>">
                            <label for="form-field-color-code">Color Code</label> 
                            <input type="text" name="color_code" value="<%=data[0].color_code%>" id="form-field-color-code" placeholder="Color Code" class="form-control">
                            <span class="help-block"><%=errorData.color_code%></span>
                        </div>

                        <div class="form-group <%=(errorData.is_active)?'has-error':''%>">
                            <label for="form-field-select-2">Status</label>
                            <select class="form-control" name="is_active" id="form-field-select-2">
                                <option value="1" <%=data[0].is_active==1 ? 'selected' : '' %>>Active</option>
                                <option value="0" <%=data[0].is_active==0 ? 'selected' : '' %>>Inactive</option>
                            </select>
                            <span for="status" class="help-block"><%=errorData.is_active%></span>
                        </div>
                    </div> 
                    <!-- /.box-body --> 

                    <div class="box-footer">
                        <button class="btn btn-info" type="submit"> <i class="ace-icon fa fa-check bigger-110"></i>Submit</button>
                        <a href="<%=nodeAdminUrl%>/<%=controller%>/list%>"><button class="btn" type="button">Cancel</button></a> 
                    </div>
                </form>
            </div>
            
          <!-- /.box -->
           </div> 
        </div>
        <!--/.col (left) -->
        
         
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content --> 
</div>
<%- include('../elements/footer'); %> 
